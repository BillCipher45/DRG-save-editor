{
  "name": "drg-editor",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --open",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "preview:test": "start-server-and-test preview http://localhost:4173/drg-editor",
    "test": "vitest",
    "test:ci": "vitest run",
    "test:e2e": "npm run preview:test 'cypress open'",
    "test:cov": "vitest run --coverage",
    "test:e2e:headless": "npm run preview:test 'cypress run'",
    "test:e2e:ci": "vite build && npm run preview:test 'cypress run --record'",
    "bench": "vitest bench",
    "prepare": "husky install",
    "lint": "eslint src",
    "lint:fix": "eslint --fix src",
    "format": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:fix": "prettier --fix \"src/**/*.{js,jsx,ts,tsx,json,css,md}\""
  },
  "lint-staged": {
    "**/*.ts": [
      "prettier --write --ignore-unknown",
      "eslint --fix"
    ],
    "**/*.tsx": [
      "prettier --write --ignore-unknown",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "clsx": "^1.2.1",
    "countapi-js": "^1.0.2",
    "daisyui": "^2.31.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.2",
    "react-icons": "^4.4.0",
    "react-use": "^17.4.0",
    "zustand": "^4.1.1"
  },
  "devDependencies": {
    "@testing-library/cypress": "^9.0.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/jest-image-snapshot": "^5.1.0",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "@types/react-test-renderer": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "@vitejs/plugin-react": "^2.1.0",
    "@vitest/coverage-c8": "^0.26.2",
    "autoprefixer": "^10.4.12",
    "cypress": "^12.2.0",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-react": "^7.31.8",
    "husky": "^8.0.1",
    "jest-image-snapshot": "^5.2.0",
    "jsdom": "^20.0.3",
    "lint-staged": "^13.0.3",
    "postcss": "^8.4.17",
    "prettier": "2.7.1",
    "puppeteer": "^18.2.1",
    "react-test-renderer": "^18.2.0",
    "start-server-and-test": "^1.15.2",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.6.4",
    "vite": "^3.1.0",
    "vite-tsconfig-paths": "^3.6.0",
    "vitest": "^0.24.0"
  }
}
